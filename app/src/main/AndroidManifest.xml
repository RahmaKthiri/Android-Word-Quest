<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.aar.app.wordsearch">

    <application
        android:name=".WordSearchApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".features.settings.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".features.gameplay.GamePlayActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".features.mainmenu.MainMenuActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".features.gameover.GameOverActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".features.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".features.gamehistory.GameHistoryActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".features.gamethemeselector.ThemeSelectorActivity">
        </activity>
    </application>

</manifest>